{
    #
    # 20profile_default -- requires mount options acl and user_xattr
    #
               
    if($ibay->prop('SmbProfileType') ne 'default') {
        return '';
    }

    return <<PROFILE;
# 20profile_default:
read only            = no
inherit permissions  = yes
inherit owner        = yes
store dos attributes = yes
map archive          = no
map readonly         = no
inherit acls         = yes
map acl inherit      = yes
PROFILE
}
{
# This is the WinNT/W2K Profiles share
# WinNT/W2K profiles are stored in {$profileDir}/~user
# Win9x profiles are stored in ~user/._winprofile
    return ""
	unless ($smb{RoamingProfiles} eq "yes");

    $OUT .= <<HERE;
[Profiles]
comment = Roaming Profiles Share
path = $baseDir/profile
writeable = yes
browseable = no
create mask = 0600
directory mask = 0700
csc policy = disable
hide files = /desktop.ini/ntuser.ini/NTUSER.*/
HERE
}

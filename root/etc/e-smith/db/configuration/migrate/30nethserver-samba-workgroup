{
    my $Workgroup = $DB->get_prop('smb', 'Workgroup');

    if( $Workgroup ) {
	return;
    }

    $Workgroup = $DB->get_value('DomainName') || return;

    # Trim after the first non-allowable character:
    $Workgroup =~ s/[^\w\-\.].*$//i;

    $DB->set_prop('smb', 'Workgroup', $Workgroup, type => 'service');
}

use strict;

my $event = shift;
my $uid = getpwnam('shared');
my $gid = getgrnam('shared');

my $exitCode = 0;

if($uid && $gid) {
    qx(/usr/bin/net groupmap add unixgroup=shared >/dev/null);
    $exitCode = $!;
}

exit($exitCode);
